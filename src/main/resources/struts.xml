<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="com.force.aus.outboundMessage" extends="struts-default">

		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="index"
			class="com.force.aus.outboundMessage.actions.HomePageAction" method="execute">
			<result>/obm.jsp</result>
		</action>

		<action name="struts">
			<result>/struts.jsp</result>
		</action>
		<action name="hello"
			class="com.force.aus.outboundMessage.actions.StrutsAction" method="execute">
			<result name="success">/action.jsp</result>
		</action>
	</package>

</struts>